{
  "name": "telegram-userbot-backend",
  "version": "1.0.0",
  "description": "Backend for Telegram Userbot with automatic posting capabilities",
  "main": "app/main.py",
  "scripts": {
    "start": "uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "dev": "uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload",
    "test": "pytest",
    "lint": "flake8 .",
    "type-check": "mypy --package app"
  },
  "dependencies": {
    "pyrofork": ">=2.3.0",
    "fastapi": "==0.110.0",
    "uvicorn": "==0.29.0",
    "python-dotenv": "==1.0.1",
    "pydantic": "==2.6.4",
    "pydantic-settings": "==2.2.1",
    "sqlalchemy": "==2.0.29",
    "asyncpg": "==0.29.0",
    "python-jose": "==3.3.0",
    "passlib": "==1.7.4",
    "alembic": "==1.13.1",
    "httpx": "==0.27.0",
    "cryptography": "==42.0.5",
    "psycopg2-binary": "==2.9.9"
  },
  "devDependencies": {
    "pytest": "==8.1.1",
    "pytest-asyncio": "==0.23.6",
    "black": "==24.3.0",
    "flake8": "==7.0.0",
    "mypy": "==1.9.0"
  }
}